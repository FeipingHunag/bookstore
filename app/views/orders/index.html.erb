<h1>我的订单</h1>

<% if @orders.blank? %>

<p>您还没有下过订单</p>

<% else %>
  <table class="tbitem">
    <tr>
      <th>邮箱地址</th>
      <th>收货地址</th>
      <th>总价</th>
      <th>付款方式</th>
      <th>状态</th>
    </tr>

  <% @orders.each do |order| %>
    <tr>
      <td><%= order.email %></td>
      <td><%= order.address %></td>
      <td><%= order.total_price %></td>
      <td><%= order.pay_type %></td>
      <td><%= order.status %></td>
      <td> <%= link_to '订单详情', order %> </td>
    </tr>
  <% end %>
  </table>
<% end %>

