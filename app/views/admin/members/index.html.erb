<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_members_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_member_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Members</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.admin_member.email", :default => t("activerecord.labels.email", :default => "Email")) %>
          </th>
                    <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @members.each do |member| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= member.id %>
          </td>
                    <td>
            <%= link_to member.email, admin_member_path(member) %>
          </td>
                    <td>
            <%= member.created_at %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_member_path(member) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_member_path(member) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", admin_member_path(member), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
        <%= will_paginate @members  %>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
