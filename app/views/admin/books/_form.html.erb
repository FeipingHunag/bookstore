<%= form_for [:admin, @book], :html => {:multipart => true, :class => :form } do |f| -%>
  <div class="group">
    <%= f.label :title, "标题", :class => :label %>
    <%= f.text_field :title, :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :subtitle, "副标题", :class => :label %>
    <%= f.text_field :subtitle, :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>
  <div class="group">
    <%= f.label :category_id, "类别", :class => :label %>
    <%= f.collection_select :category_id, Category.all, :id, :name %>
  </div>
  <div class="group">
    <%= f.label :description, "内容简介", :class => :label %>
    <%= f.text_area :description, :class => 'text_area' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :image, "图片", :class => :label %>
    <%= f.file_field :image, :class => 'text_field' %>
    <span class="description">Ex: title.jpg(jpg|png|gif)</span>
  </div>

  <div class="group">
    <%= f.label :price, "售价", :class => :label %>
    <%= f.text_field :price, :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :page_num, '页数', :class => :label %>
    <%= f.text_field :page_num, :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :author, "作者", :class => :label %>
    <%= f.text_field :author, :class => 'text_field' %>
  </div>
  <div class="group">
    <%= f.label :publisher, "出版社", :class => :label %>
    <%= f.text_field :publisher, :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :publish_date, "出版日期", :class => :label %>
    <%= f.datetime_select :publish_date, :class => 'datetime_select' %>
    <span class="description">Ex: a simple text</span>
  </div>

<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>
  <span class="text_button_padding"><%= t("web-app-theme.or", :default => "or") %></span>
	<%= link_to t("web-app-theme.cancel", :default => "Cancel"), admin_books_path, :class => "text_button_padding link_button" %>
</div>
<% end -%>

