<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "类别列表", admin_categories_path  %></li>
      <li><%= link_to "新增类别", new_admin_category_path %></li>
      <li class="active"><%= link_to "全部类别", admin_category_path %></li>
    </ul>
  </div>
  <div class="content">
    <div class="inner">

        <p>
          <b>类别名称:</b>
          <%= @category.name %>
        </p>

        <p>
          <b>描述:</b>
          <%= @category.description %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_category_path(@category), :class => "button" %>
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_category_path(@category), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>

