
  <div class="group">
    <%= f.label :name, '姓名', :class => :label %>
    <%= f.text_field :name, :class => 'text_field' %>
  </div>

  <div class="group">
    <%= f.label :address, '地址', :class => :label %>
    <%= f.text_field :address, :class => 'text_field' %>
  </div>

  <div class="group">
    <%= f.label :email, '邮箱', :class => :label %>
    <%= f.text_field :email, :class => 'text_field' %>
  </div>

  <div class="group">
    <%= f.label :pay_type, '付款方式', :class => :label %>
    <%= f.select :pay_type, Order::PAYMENT_TYPES,
                  :prompt => '请选择付款方式' %>
  </div>

  <div class="group">
    <%= f.label :status, '订单状态', :class => :label %>
    <%= f.select :status, Order::STATUS %>
  </div>

